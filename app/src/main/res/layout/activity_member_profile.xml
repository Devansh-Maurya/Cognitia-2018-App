<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attribute="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:popupTheme="@style/AppTheme.PopupOverlay"
    android:layout_gravity="bottom">

    <!--Fake view, helps to go back to previous activity-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/blank_view"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="15dp"
        android:paddingBottom="24dp"
        android:orientation="vertical">

        <developer.shivam.crescento.CrescentoImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:elevation="20dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/robotics"
            attribute:gravity="top"
            attribute:curvature="50dp"
            attribute:crescentoTintMode="manual"
            attribute:crescentoTintColor="#FFF"
            app:crescentoTintAlpha="255"
            android:transitionName="@string/event_image_trans"
            android:id="@+id/member_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/laribok"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:fontFamily="@font/worksans_reg"
            android:paddingStart="@dimen/fab_margin"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/member_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/laribok"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/worksans_reg"
            android:paddingStart="@dimen/fab_margin"
            android:textStyle="bold"
            android:id="@+id/member_post"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/laribok"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/worksans_reg"
            android:paddingStart="@dimen/fab_margin"
            android:id="@+id/member_team"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/laribok"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/worksans_reg"
            android:paddingStart="@dimen/fab_margin"
            android:paddingTop="10dp"
            android:id="@+id/member_email"/>
    </LinearLayout>

</LinearLayout>
